    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch file",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "start"],
            "args": ["--","--file", "src/examples/basic.ts"]
          },
          {
            "name": "Launch pattern",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "start"],
            "args": ["--","--pattern", "src/examples/**"]
          },
          {
            "name": "Launch all",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "start"],
            "args": ["--", "--all"]
          },
          {
            "name": "Launch diff",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "start"],
          }
    ]
}